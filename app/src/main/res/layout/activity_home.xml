<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_test_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="60dp">

        <exodiasolutions.bikepool.Custom.TV_normaltext
            android:layout_width="wrap_content"
            android:text="@string/app_name"
            android:textColor="#dddddd"
            android:textSize="25sp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"

                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="3dp"
                android:background="?android:selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="#F0F0F0"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="80dp"
                        android:src="@drawable/user_wh"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_height="80dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_margin="10dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        />


                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">




                        <exodiasolutions.bikepool.Custom.TV_normaltext
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Name: Sunny Narang"
                            android:layout_marginBottom="10dp"
                            android:textColor="#555"
                            android:id="@+id/namev"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            />
                        <exodiasolutions.bikepool.Custom.TV_normaltext
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name: Sunny Narang"
                            android:layout_marginBottom="5dp"
                            android:textColor="#555"
                            android:id="@+id/emailv"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />
                        <exodiasolutions.bikepool.Custom.TV_normaltext
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name: Sunny Narang"
                            android:layout_marginBottom="10dp"
                            android:textColor="#555"
                            android:id="@+id/phonev"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />







                    </LinearLayout>




                </LinearLayout>


            </android.support.v7.widget.CardView>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="Your Rides"
                    android:onClick="your"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_press"
                    android:textColor="#fff"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="Share Ride"
                    android:onClick="share"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_press"
                    android:textColor="#fff"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:text="Get Ride"
                    android:onClick="get"
                    android:background="@drawable/button_press"
                    android:textColor="#fff"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_height="0dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="About App"
                    android:onClick="about"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_press"
                    android:textColor="#fff"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:text="Logout"
                    android:onClick="logout"
                    android:background="@drawable/button_press"
                    android:textColor="#fff"
                    />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>




</RelativeLayout>

