<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginLeft="5dp"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginRight="5dp"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"

        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="3dp"
        android:background="?android:selectableItemBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#F0F0F0"
            android:layout_height="wrap_content">




    <ImageView
        android:layout_width="80dp"
        android:src="@drawable/marker"
        android:id="@+id/map"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_height="80dp" />

    <View
        android:layout_width="1dp"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topic_name1"
                android:text="Hello Card"
                android:layout_width="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#A1000000"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/topic_name2"
                android:text="Hello Card"
                android:layout_width="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#A1000000"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/topic_name3"
                android:text="Hello Card"
                android:layout_width="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#000000"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/topic_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello Card"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/topic_name5"
                android:text="Hello Card"
                android:layout_width="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#A1000000"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/topic_name6"
                android:text="Hello Card"
                android:layout_width="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#A1000000"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/topic_name7"
                android:text="Hello Card"
                android:layout_width="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#A1000000"
                android:layout_height="wrap_content" />




        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>